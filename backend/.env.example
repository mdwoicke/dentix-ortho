# Caching Configuration
# Set to false to disable caching and always fetch fresh data from Cloud 9 API
# Set to true to enable caching with TTL-based expiration
ENABLE_CACHING=false

# =============================================================================
# LLM / AI Configuration
# =============================================================================

# Replit Mode - Set to 'true' when deploying on Replit
# Automatically disables Claude CLI and uses API-only mode
REPLIT_MODE=false

# Claude CLI mode (ignored when REPLIT_MODE=true)
# Set to 'true' to use Claude CLI for AI features (local development)
USE_CLAUDE_CLI=true

# Anthropic API Key (required when REPLIT_MODE=true or USE_CLAUDE_CLI=false)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

